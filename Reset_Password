    <script>

    function togglePasswordVisibility() {
        var passwordInput = document.getElementById('password');
        var eyeIcon = document.getElementById('eyeIcon');

        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            eyeIcon.textContent = 'üôà'; // Change to eye closed icon or similar
        } else {
            passwordInput.type = "password";
            eyeIcon.textContent = 'üëÅÔ∏è'; // Change to eye open icon
        }
    }

    function validateForm() {
    var username = document.getElementById('username').value;
    var password = document.getElementById('password').value;
    
    if(username == '' || password == '') {
        alert('Please fill out all fields.');
        return false;
    }
    // Add further validation if needed
    alert('Form is valid!'); // This can be replaced with actual form submission
    return true;
    }
    </script>

